{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/manifest.schema.json",
  "title": "Hub Manifest",
  "type": "object",
  "properties": {
    "cores": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "command": { "type": "string", "minLength": 1 },
          "args": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "cwd": { "type": "string" },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "default": {}
          },
          "secrets": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "namespace": { "type": "string", "minLength": 1 },
          "policy": {
            "type": "object",
            "properties": {
              "allow_destructive": { "type": "boolean", "default": false },
              "max_concurrency": { "type": "integer", "minimum": 1, "default": 4 },
              "rate_limit_rps": { "type": "integer", "minimum": 1 },
              "deny_tools": { "type": "array", "items": { "type": "string" } },
              "allow_tools": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          },
          "health": {
            "type": "object",
            "properties": {
              "startup_timeout_ms": { "type": "integer", "minimum": 0, "default": 10000 },
              "ping_interval_ms": { "type": "integer", "minimum": 0, "default": 30000 },
              "restart_backoff_ms": { "type": "integer", "minimum": 0, "default": 2000 }
            },
            "additionalProperties": true
          },
          "scaling": {
            "type": "object",
            "properties": {
              "min": { "type": "integer", "minimum": 1, "default": 1 },
              "max": { "type": "integer", "minimum": 1 }
            },
            "additionalProperties": true
          },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["command", "namespace"],
        "additionalProperties": false
      }
    }
  },
  "required": ["cores"],
  "additionalProperties": false
}

